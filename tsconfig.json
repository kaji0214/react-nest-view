{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
